{
  "name": "manager",
  "packageManager": "yarn@3.1.1",
  "type": "module",
  "bin": "dist/index.js",
  "scripts": {
    "dev": "rimraf build && tsc && node -r dotenv/config build/index.js",
    "cleanup": "rimraf build && rimraf dist",
    "build": "yarn cleanup && yarn node -r dotenv/config esbuild.config.cjs",
    "pkg:linux": "yarn build && pkg package.json --options optimize_for_size,max_old_space_size=64,use-idle-notification",
    "remove-logs": "rimraf *.log & rimraf .*audit.json & rimraf botRegisterState.json &"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.18",
    "@types/node-cron": "^3.0.1",
    "@types/xxhashjs": "^0.2.2",
    "dotenv": "^16.0.0",
    "esbuild": "^0.14.25",
    "pkg": "^5.5.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "gaxios": "^4.3.2",
    "helmet": "^5.0.2",
    "node-cron": "^3.0.0",
    "winston": "3.5.1",
    "winston-daily-rotate-file": "4.6.1",
    "xxhashjs": "^0.2.2",
    "zod": "^3.11.6"
  },
  "pkg": {
    "targets": [
      "node17-linux-x64"
    ],
    "outputPath": "dist/linux"
  }
}
