{
  "name": "crypto-poc",
  "packageManager": "yarn@3.2.0",
  "type": "module",
  "workspaces": [
    "bot",
    "manager",
    "ui-mgr"
  ],
  "scripts": {
    "setup": "zx ./scripts/local-setup.mjs",
    "bot": "yarn workspace bot",
    "mgr": "yarn workspace manager",
    "ui": "yarn workspace ui",
    "upgrade-build-tools": "yarn bot add --dev esbuild pkg && yarn mgr add --dev esbuild pkg",
    "format": "prettier --write \"**/src/**/*.ts*\""
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "zx": "5.1.0"
  }
}
