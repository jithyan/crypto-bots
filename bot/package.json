{
  "name": "bot",
  "packageManager": "yarn@3.1.1",
  "type": "module",
  "bin": "dist/index.js",
  "main": "dist/index.js",
  "scripts": {
    "cleanup": "rimraf build",
    "dev": "yarn cleanup && tsc && node -r dotenv/config build/index.js",
    "gen-swagger-types": "yarn dlx swagger-typescript-api -p ./swagger/spot_api.yaml -o ./src/types -n binanceSpotApi.swagger.ts",
    "remove-logs": "rimraf *.log & rimraf .*audit.json & rimraf *.csv",
    "build:local": "rimraf dist && yarn node -r dotenv/config esbuild.config.cjs",
    "build:cloud": "rimraf dist && yarn node -r dotenv/config esbuild.config.cjs dotenv_config_path=.cloud.env dotenv_config_debug=true",
    "pkg:linux:local": "yarn build:local && yarn pkg package.json --options optimize_for_size,max_old_space_size=64,use-idle-notification",
    "pkg:linux:cloud": "yarn build && yarn pkg package.json --options"
  },
  "dependencies": {
    "@binance/connector": "^1.7.0",
    "axios": "^0.25.0",
    "big.js": "^6.1.1",
    "poloniex-node-api": "^5.0.0",
    "winston": "^3.5.1",
    "winston-csv-format": "^2.0.2",
    "winston-daily-rotate-file": "^4.6.0"
  },
  "devDependencies": {
    "@types/big.js": "^6.1.3",
    "@types/node": "^17.0.16",
    "dotenv": "^16.0.0",
    "esbuild": "^0.14.21",
    "pkg": "^5.5.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.5"
  },
  "pkg": {
    "targets": [
      "node17-linux-x64"
    ],
    "outputPath": "dist/linux"
  }
}
